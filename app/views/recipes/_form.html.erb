<%= form_for recipe do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <% unless ingredients.blank? %>
      <%= f.label :ingredients %><br>
      <%= f.collection_check_boxes :ingredient_ids, ingredients, :id, :name %><br>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>
